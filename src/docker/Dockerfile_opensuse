# syntax=docker/dockerfile:1
# openSUSE is known for its robustness and flexibility.
# This Dockerfile is a good choice for a stable and secure environment.
FROM opensuse/leap:15.5
ENV TERM=xterm

# Check the current system
RUN grep "VERSION\|ID" /etc/os-release

# Install system updates and dependencies
RUN zypper refresh \
  && zypper --non-interactive install bash curl git netcat 'sudo'

# Download and execute the script
RUN /bin/bash -c "$(curl -fsSL https://github.com/bitcoin-tools/nodebuilder/raw/master/nodebuilder)"
